    BrightCyan: ClassVar[AnsiColor] = ...
    BrightWhite: ClassVar[AnsiColor] = ...

    @staticmethod
    def try_from_8bit(value: int) -> AnsiColor: ...
    def to_8bit(self) -> int: ...
    def is_achromatic(self) -> bool: ...
    def is_bright(self) -> bool: ...
    def to_3bit(self) -> AnsiColor: ...
    def name(self) -> str: ...
    def abbr(self) -> str: ...
